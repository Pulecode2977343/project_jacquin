}

input, textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 18px 12px;
    background-color: var(--azul-ligero);
    border-radius: 0 8px 8px 0;
    border: none;
    border-left: 4px solid var(--naranja-oscuro);
    box-shadow: inset var(--azul-intenso) 0 0 15px;
}

textarea {
    resize: none;
    min-width: 100%;
    min-height: 100px;
    max-height: 100px;
}

.origen-fieldset {
    border: 1px solid var(--azul-ligero);
    border-radius: 8px;
}

.origen-legend {
    font-family: var(--fuente-principal);
    color: var(--azul-ligero);
    font-size: 2rem;
    font-weight: 700;
}

.secundary-title span {
  font-style: italic;
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 2.5rem;
}

.radio-option {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: .7rem .75rem;
  border-radius: 10px;
  cursor: pointer;
  user-select: none;
  position: relative;
}

.custom-radio:hover {
  background-color: var(--naranja-fuerte);
}
 .radio-option input {
  /* oculto, pero accesible con teclado */
  position: absolute;
  opacity: 0;
  inset: 0;
  cursor: pointer;
 }

.custom-radio {
  height: 20px;
  width: 20px;
  border-radius: 50px;
  border: 2px solid var(--azul-ligero);
  display:inline-block;
  flex:0 0 20px;
  position:relative;
  transition:border-color .3s ease;
}

.radio-option input:checked + .custom-radio {
  border-color: var(--color-acento-naranja);
}

.radio-option input:checked + .custom-radio::after {
  content: "";
  position: absolute;
  inset: 3px;
  background: var(--color-acento-naranja);
  border-radius: 50%;
}

.label-text {
  font-size: 1rem;
  color: var(--azul-ligero);
}

/* Bloque "Otros" */
.otros-group {
  display:flex;
  flex-direction:column;
  gap: 0.5rem;
}

/* inicialmente oculto; se mostrará si el radio "otros" está marcado (ver regla con :has) */
.otros-detalle{
  display: none; /* alineado con la radio */
}

.otros-detalle input{
  width:100%;
  border:1px solid #E5E7EB;
  border-radius:10px;
  padding:.7rem .85rem;
  font-size:.96rem;
}

.otros-detalle input:focus{
  outline:3px solid var(--ring);
  border-color:#BFDBFE;
}

/* Mejora progresiva: muestra el campo si se selecciona "Otros".
   Nota: :has() ya está soportado en Chrome, Edge, Safari y Firefox recientes. */
.origen-fieldset:has(#origen-otros:checked) .otros-detalle{
  display:block;
}

/* Accesible "screen reader only" */
.sr-only{
  position:absolute !important;
  width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0;
}


