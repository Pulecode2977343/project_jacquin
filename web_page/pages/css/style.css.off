:root {
    /* Paleta de Colores */
    --color-principal-azul: #223F61;
    --color-acento-azul: #93B6EE;
    --color-acento-naranja: #E78C3B;
    --color-blanco-neutro: #F3F2EE;
    --color-humo-gris: #CDCDCD;

    /* Tonalidades del Azul */
    --azul-ligero: #BCD0E7;
    --azul-claro: #9EACCC;
    --azul-suave: #8199B1;
    --azul-normal: #698197;
    --azul-medio: #526A7E;
    --azul-oscuro: #3B5267;
    --azul-profundo: #2C465E;
    --azul-intenso: #193149;

    /* Tonalidades del Naranja */
    --naranja-ligero: #FFE0BD;
    --naranja-claro: #FCD8A2;
    --naranja-suave: #F8C689;
    --naranja-normal: #F3B470;
    --naranja-medio: #EFA259;
    --naranja-oscuro: #E78C3B;
    --naranja-fuerte: #CC7C32;
    --naranja-intenso: #B26C28;
    --naranja-oscuro-intenso: #985C1F;

    /* Tipografía */
    --fuente-principal: 'Helvetica Neue Cond. Bold', sans-serif;
    --fuente-secundaria: 'Marion Regular', serif;
}

/* --- Estilos base (móvil) --- */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
      background-color: var(--color-principal-azul);
      font-family: var(--fuente-principal);
}

.header {
  height: 20vh;
  width: 100%;
  padding: 0  15%;
  border: 1px solid black;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}

.container-logo {
  height: auto;
  width: auto;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center
}

.key:hover {
    fill:var(--color-humo-gris);
}

.side-menu {
  display: none;
}

.nav ul {
  list-style: none;
  display: flex; 
  gap: 50px;;
}

.nav a {
  color: var(--color-blanco-neutro);
}

.icon {
  color: var(--color-blanco-neutro);
}

.nav ul li a:hover {
  color: var(--naranja-oscuro);stroke: var(--naranja-oscuro);
}

.hamb {
  display: none;
  cursor: pointer;
}

.hamb-line {
  width: 25px;
  height: 3px;
  background: var(--color-blanco-neutro);
  position: relative;
  display: block;
}

.hamb-line::before,
.hamb-line::after {
  content: '';
  width: 25px;
  height: 3px;
  background: var(--color-blanco-neutro);
  position: absolute;
  left: 0;
  transition: 0.3s;
}

.hamb-line::before {
  top: -8px;
}

.hamb-line::after {
  top: 8px;
}

/* --- Responsive --- */
@media (max-width: 900px) {

  .nav ul {
    flex-direction: column;
    width: 100%;
    display: flex; /* siempre visible */
    gap: 50px;
  }

  .nav {
    border: 1px solid black;
    display: none;
    flex-direction: column;
    background: var(--color-principal-azul);
    top: 26.2vh;
    right: 0;
    height: auto;
    width: 100vw;
    position: relative;
  }

  .nav.active {
    display: flex;
  }

  .hamb {
    display: block;
  }

.nav ul li a:hover {
  color: var(--naranja-oscuro);stroke: var(--naranja-oscuro);
}
  
  .nav ul li {
    border: 1px solid black;
    width: 100%;
    align-items: center;
    display: flex;
    justify-content: center;
    opacity: 0;
    transform: translateX(50px); /* Muévelo 50px a la derecha */
    transition: all 0.4s ease-in-out; /* La animación suave */
  }

  .nav.active ul li {
    opacity: 1;
    transform: translateX(0); /* Vuelve a su posición original */
  }

/* 3. El retraso escalonado para cada item */
    .nav.active ul li:nth-child(1) {
    transition-delay: 0.1s;
  }
    .nav.active ul li:nth-child(2) {
    transition-delay: 0.2s;
  }
    .nav.active ul li:nth-child(3) {
    transition-delay: 0.3s;
  }
    .nav.active ul li:nth-child(4) {
    transition-delay: 0.4s;
  }
    .nav.active ul li:nth-child(5) {
    transition-delay: 0.5s;
  }

  .nav ul li a:hover {
  color: var(--naranja-oscuro);stroke: var(--naranja-oscuro); /* color de hover */
  }

}

.hamb.open .hamb-line {
  background: transparent;
}

.hamb.open .hamb-line::before {
  transform: rotate(45deg);
  top: 0;
}

.hamb.open .hamb-line::after {
  transform: rotate(-45deg);
  top: 0;
}

